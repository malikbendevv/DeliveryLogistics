generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
  output          = "./node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  customer
  driver
  admin
}

model User {
  id           String  @id @default(uuid()) // Better than auto-increment for security
  firstName    String
  lastName     String
  email        String  @unique // Ensures no duplicate emails
  password     String // Will be hashed (see note below)
  phoneNumber  String  @unique // Optional, but unique if provided
  address      String?
  refreshToken String? @unique

  role      Role      @default(customer)
  createdAt DateTime
  updatedAt DateTime  @updatedAt
  //   orders       Order[]                        // Relation to orders (optional)
  Address   Address[]

  // Indexes for faster queries
  @@index([id])
  @@index([email])
  @@index([phoneNumber])
}

model Address {
  id        String  @id @default(uuid())
  street    String
  street2   String?
  city      String
  state     String
  zipCode   String
  country   String  @default("Algeria")
  latitude  Float?
  longitude Float?
  userId    String
  user      User    @relation(fields: [userId], references: [id])
}
